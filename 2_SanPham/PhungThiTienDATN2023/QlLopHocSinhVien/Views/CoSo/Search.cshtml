@model IEnumerable<QlLopHocSinhVien.Model.Entities.CoSo>
@{
    ViewData["Title"] = "Details";
}


<form class="form-inline">
    Nhập nội dung tìm kiếm
    <input type="text" name="name" />
    <button asp-action="Search" method="get">Tìm</button>
</form>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <button id="button" class="btn btn-primary mb-3">Xóa một hàng</button>
                <a href="/CoSo/Create" class="btn btn-warning  mb-3">Thêm mới</a>
                <div class="table-responsive">
                    <table id="example" class="table hover">
                        <thead>
                            <tr class="table-success">
                                <th>STT</th>
                                <th>Mã Cơ sở</th>
                                <th>Tên cơ sở</th>
                                <th>Địa chỉ</th>
                                
                                <th>Quản lý</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-danger">
                                    <td></td>
                                    <td>@item.MaCs</td>
                                    <td>@item.TenCs</td>
                                    <td>@item.DiaChi</td>
                                    <td>
                                        <a href="/CoSo/Edit/@item.MaCs" class="btn btn-primary ">Sửa</a>
                                        <a href="/CoSo/Delete/@item.MaCs" class="btn btn-warning" style="color:red">Xóa</a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</div>