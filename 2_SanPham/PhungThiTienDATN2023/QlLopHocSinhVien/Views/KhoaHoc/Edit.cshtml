@model QlLopHocSinhVien.Model.Entities.KhoaHoc
@{
    ViewData["Title"] = "Edit";
}

<form href="/KhoaHoc/Edit" method="post">
    <div class="form-group">
        <lable asp-for="MaKh">Mã khóa học</lable>
        <input asp-for="MaKh" value="@Model.MaKh" class="form-control" />

        <span asp-validation-for="MaKh" class="text-danger"></span>

    </div>
    <div class="form-group">
        <lable asp-for="Anh">Ảnh</lable>
        <input asp-for="Anh" value="@Model.Anh" class="form-control" />
        <span asp-validation-for="Anh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <lable asp-for="TieuDe">Tiêu đề</lable>
        <input asp-for="TieuDe" value="@Model.TieuDe" class="form-control" />
        <span asp-validation-for="TieuDe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <lable asp-for="NoiDung">Nội dung</lable>
        <input asp-for="NoiDung" value="@Model.NoiDung" class="form-control" />
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>
    

    <div class="form-group">
        <button class="btn btn-success">Lưu</button>
    </div>


</form>
