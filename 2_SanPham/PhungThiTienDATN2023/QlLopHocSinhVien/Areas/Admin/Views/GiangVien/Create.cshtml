@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QlLopHocSinhVien.Model.Entities.GiangVien
@{
    //ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="card mb-4">
        <h5 class="card-header">@ViewBag.Title</h5>
        <div class="card-body">
            <form action="Create" method="post">
                <p class="text-danger">@ViewBag.Message</p>
                <div class="row">
                    <div class="mb-3 col-12">
                        <label class="form-label">Mã</label>
                        <input type="text" class="form-control form-control-sm" name="magv" value="@ViewBag.Code" required>
                    </div>

                    <div class="mb-3 col-md-12">
                        <label class="form-label">Tên nhân viên</label>
                        <div class="input-group">
                            <select class="form-select form-select-sm" name="manv" asp-items="@ViewBag.NhanVien" required>
                                <option value="">--Chọn nhân viên--</option>
                            </select>
                            <a class="btn btn-success btn-sm p-1" href="/Admin/NhanVien/Create"><i class='bx bx-plus-medical'></i></a>
                        </div>
                    </div>

                    <div class="mb-3 col-md-12">
                        <label class="form-label">Trình độ</label>
                        <div class="input-group">
                            <select class="form-select form-select-sm" name="matrinhdo" asp-items="@ViewBag.TrinhDo" required>
                                <option value="">--Chọn trình độ--</option>
                            </select>
                            <a class="btn btn-success btn-sm p-1" href="/Admin/TrinhDo/Create"><i class='bx bx-plus-medical'></i></a>
                        </div>
                    </div>
                </div>

                

                <button type="submit" class="btn btn-primary btn-sm">Lưu</button>
                <a class="btn btn-danger btn-sm" asp-action="Index">Hủy</a>
            </form>

        </div>
    </div>
</div>

