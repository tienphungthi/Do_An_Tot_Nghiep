@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<QlLopHocSinhVien.Model.Entities.LopHoc>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">DANH SÁCH @ViewBag.Title</h5>

    <div class="card-body p-1">
        <form asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        @*<div class="col-12 col-md-1 col-lg-1">
                            <label class="form-label">Từ</label>
                            <input type="date" name="ds" class="form-control form-control-sm p-1" value="@ViewBag.DateStart" onkeydown="return false;">
                        </div>
                        <div class="col-12 col-md-1 col-lg-1">
                            <label class="form-label">Đến</label>
                            <input type="date" name="de" class="form-control form-control-sm p-1" value="@ViewBag.DateEnd" onkeydown="return false;">
                        </div>*@

                        <div class="col-12 col-md-2 col-lg-2">
                            <label class="form-label">Cơ sở</label>
                            <select class="form-select form-select-sm" name="macoso" asp-items="@ViewBag.CoSo">
                                <option value="">Tất cả</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-2 col-lg-2">
                            <label class="form-label">Nhân viên</label>
                            <select class="form-select form-select-sm" name="manv" asp-items="@ViewBag.NhanVien">
                                <option value="">Tất cả</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-2 col-lg-2">
                            <label class="form-label">Khóa học</label>
                            <select class="form-select form-select-sm" name="makhoahoc" asp-items="@ViewBag.KhoaHoc">
                                <option value="">Tất cả</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-2 col-lg-2">
                            <label class="form-label">Chương trình học</label>
                            <select class="form-select form-select-sm" name="machuongtringhoc" asp-items="@ViewBag.ChuongTrinhHoc">
                                <option value="">Tất cả</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-4 col-lg-4">
                            <label class="form-label">Từ khóa</label>
                            <div class="input-group">
                                <input type="text" name="keyword" class="form-control form-control-sm">
                                <button type="submit" class="btn btn-success btn-sm p-1"><i class='bx bx-search-alt-2'></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="text-center">
                    <th><a class="btn btn-success btn-sm p-1" asp-action="Create"><i class='bx bx-plus-medical'></i></a></th>
                    <th>Mã</th>
                    <th>Cơ sở</th>
                    <th>Tên lớp</th>
                    <th>Sĩ số</th>
                    <th>Nhân viên</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Chương trình học</th>
                    <th>Khóa học</th>
                    <th>Doanh thu dự kiến</th>
                    <th>số tiền đã thu</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex">
                                <a class="btn btn-primary btn-sm p-1 mx-1" asp-action="Edit" asp-route-id="@item.MaLh" title="Sửa"><i class="bx bx-edit-alt"></i></a>
                                <a class="btn btn-danger btn-sm p-1" asp-action="Delete" asp-route-id="@item.MaLh" title="Xóa"><i class="bx bx-trash"></i></a>
                            </div>
                        </td>
                        <td>@item.MaLh</td>
                        <td>@item.MaCs</td>
                        <td>@item.TenLop</td>
                        <td>@item.SiSo</td>
                        <td>@item.MaNv</td>
                        <td>@item.NgayBatDau.Value.ToString("dd/MM/yyyy")</td>
                        <td>@item.NgayKetThuc.Value.ToString("dd/MM/yyyy")</td>
                        <td>@item.MaChuongTrinhHoc</td>
                        <td>@item.MaKh</td>
                        <td>@item.DoanhThuDuKien</td>
                        <td>@item.SoTienDaThu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

