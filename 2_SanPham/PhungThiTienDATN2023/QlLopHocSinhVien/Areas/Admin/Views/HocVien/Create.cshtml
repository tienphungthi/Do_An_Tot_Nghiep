@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QlLopHocSinhVien.Model.Entities.HocVien
@{
    //ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="card mb-4">
        <h5 class="card-header">@ViewBag.Title</h5>
        <div class="card-body">
            <form action="Create" method="post">
                <p class="text-danger">@ViewBag.Message</p>

                <div class="row">
                    <div class="col-md-8 mb-1">
                        <div class="card shadow-none bg-transparent border border-primary">
                            <h5 class="card-header">Thông tin học viên</h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="mb-3 col-12 col-md-4 col-lg-4">
                                        <label class="form-label">Mã<span class="text-danger"> (*)</span></label>
                                        <input type="text" class="form-control form-control-sm" name="mahv" value="@ViewBag.Code" required>
                                    </div>

                                    <div class="mb-3 col-12 col-md-4 col-lg-4">
                                        <label class="form-label">Họ tên<span class="text-danger"> (*)</span></label>
                                        <input type="text" class="form-control form-control-sm" name="hoten" required>
                                    </div>

                                    <div class="mb-3 col-12 col-md-4 col-lg-4">
                                        <label class="form-label">Ảnh</label>
                                        <input type="file" class="form-control form-control-sm" name="anh">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Lớp học<span class="text-danger"> (*)</span></label>
                                        <select class="form-select form-select-sm" name="malh" asp-items="@ViewBag.LopHoc" required>
                                            <option value="">--Chọn lớp học--</option>
                                        </select>
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">SĐT<span class="text-danger"> (*)</span></label>
                                        <input type="text" class="form-control form-control-sm" name="SDT" required>
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Gmail<span class="text-danger"> (*)</span></label>
                                        <input type="email" class="form-control form-control-sm" name="Gmail" required>
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Trạng thái</label>
                                        @*<input type="hidden" class="form-control form-control-sm" id="status_student" value="@Model.TrangThaiNhanSu">*@
                                        <select class="form-select form-select-sm" name="hoatdong" id="cbostatus_student">
                                            <option value="1">Hoạt động</option>
                                            <option value="2">Dừng hoạt động</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Giới tính</label>

                                        @*<input type="hidden" class="form-control form-control-sm" id="gender_student" value="@Model.TrangThaiNhanSu">*@
                                        <select class="form-select form-select-sm" name="gioitinh" id="cbostatus_gender">
                                            <option value="1">Nam</option>
                                            <option value="2">Nữ</option>
                                            <option value="3">Khác</option>
                                        </select>
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Ngày sinh<span class="text-danger"> (*)</span></label>
                                        <input type="date" class="form-control form-control-sm" name="ngaysinh" required>
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Trường học</label>
                                        <input type="text" class="form-control form-control-sm" name="truonghoc">
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Trình độ</label>
                                        <input type="text" class="form-control form-control-sm" name="trinhdochuyenmon">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="mb-3 col-12 col-md-6 col-lg-6">
                                        <label class="form-label">Địa chỉ<span class="text-danger"> (*)</span></label>
                                        <input type="text" class="form-control form-control-sm" name="diachi" required>
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Thành phố</label>
                                        <input type="text" class="form-control form-control-sm" name="thanhpho">
                                    </div>

                                    <div class="mb-3 col-12 col-md-3 col-lg-3">
                                        <label class="form-label">Quận</label>
                                        <input type="text" class="form-control form-control-sm" name="quan">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="mb-3 col-12 col-md-4 col-lg-4">
                                        <label class="form-label">Facebook</label>
                                        <input type="text" class="form-control form-control-sm" name="facebook">
                                    </div>

                                    <div class="mb-3 col-12 col-md-4 col-lg-4">
                                        <label class="form-label">Ngày tham gia <span class="text-danger"> (*)</span></label>
                                        <input type="date" class="form-control form-control-sm" name="ngaythamgia" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                                    </div>

                                    <div class="mb-3 col-12 col-md-4 col-lg-4">
                                        <label class="form-label">Nghề nghiệp</label>
                                        <input type="text" class="form-control form-control-sm" name="nghenghiep">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-4 mb-1">
                        <div class="card shadow-none bg-transparent border border-danger">
                            <h5 class="card-header">Thông tin tài khoản</h5>
                            <div class="card-body">
                                @*<div class="row">
                                    <div class="mb-3 col-12 col-md-6 col-lg-6">
                                        <label class="form-label invisible">Quyền đăng nhập</label>
                                        <div class="form-check form-switch form-control form-control-sm border-0">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" name="isAccount" value="true" onclick="return onChangeStatus()">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">Tạo tài khoản</label>
                                        </div>
                                    </div>
                                    <div class="mb-3 col-12 col-md-6 col-lg-6">
                                        <p class="text-danger">@ViewBag.Message</p>
                                    </div>

                                </div>*@
                                <div class="row">
                                    <div class="mb-3 col-12 col-md-6 col-lg-6">
                                        <label class="form-label">Mã tài khoản</label>
                                        <input type="text" class="form-control form-control-sm" id="accountcode" name="mataikhoan" value="" autocomplete="off">

                                    </div>

                                    <div class="mb-3 col-12 col-md-6 col-lg-6">
                                        <label class="form-label">Tên tài khoản</label>
                                        <input type="text" class="form-control form-control-sm" id="username" name="username" value="" autocomplete="off">
                                    </div>

                                    <div class="mb-3 col-12">
                                        <label class="form-label">Mật khẩu</label>
                                        <input type="password" class="form-control form-control-sm" id="password" name="password" value="" autocomplete="off">
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

                

                <button type="submit" class="btn btn-primary btn-sm">Lưu</button>
                <a class="btn btn-danger btn-sm" asp-action="Index">Hủy</a>
            </form>

        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

        //$('#cbostatusemployee').val($('#statusemployee').val());

        onChangeStatus();
    })

    function onChangeStatus() {
        var flexSwitchCheckChecked = document.getElementById('flexSwitchCheckChecked').checked;

        var accountcode = document.getElementById('accountcode');
        var username = document.getElementById('username');
        var password = document.getElementById('password');

        if (flexSwitchCheckChecked) {
            accountcode.removeAttribute('disabled');
            username.removeAttribute('disabled');
            password.removeAttribute('disabled');
        } else {
            accountcode.setAttribute('disabled', 'disabled');
            username.setAttribute('disabled', 'disabled');
            password.setAttribute('disabled', 'disabled');
        }

    }
</script>